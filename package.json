{
  "name": "advent-of-code-2025",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --watch src -e ts --exec \"tsx src/index.ts\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "nodemon": "^3.1.11",
    "tsx": "latest",
    "eslint": "^9.39.1",
    "@eslint/js": "^9.39.1",
    "typescript-eslint": "^8.48.0",
    "globals": "^16.5.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.7.3",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
